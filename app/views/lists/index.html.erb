<h2>WunderListClone</h2>
<h3>ToDo Lists</h3>
<h4><%= link_to "Make List", new_list_path %></h4>
<div class="lists">
  <% @lists.each do |list| %>
    <ul>
      <li class="list", id=<%= list.id%>><%= link_to list.title, list_path(list) %><br>
        <%= list.description %><br>
    <%= button_to "Edit List", edit_list_path(list), method: :get %>
    <% if params[:archived] && params[:archived] == "true" %>
      <%= button_to "Delete List", list_path(list), method: :delete %>
    <% end %>
    </li>
  </ul>
  <% end %>
</div>
<%= link_to 'Archived Lists', lists_path(archived: true) %>
